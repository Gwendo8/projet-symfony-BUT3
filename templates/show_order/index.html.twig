{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Admin Panel - Orders</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Reference</th>
                    <th>Created At</th>
                    <th>Status</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                {% for order in pagination %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.reference }}</td>
                        <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        <td>{{ order.status.toString() }}</td>
                        <td>{{ order.user ? order.user.getFullName() : 'N/A' }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Pas de commandes trouv√©es</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}