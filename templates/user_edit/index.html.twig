{% extends 'base.html.twig' %}

{% block title %}
    {{ 'user_edit.title' | trans }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">{{ 'user_edit.modify_user' | trans }}</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>{{ message }}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>{{ message }}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {{ form_start(form, { 'attr': {'class': 'bg-light p-4 rounded shadow-sm'} }) }}

        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.firstname, 'First Name', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.lastname, 'Last Name', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-primary w-50">{{ 'user_edit.save' | trans }}</button>
        </div>

        {{ form_end(form) }}

        <hr class="my-4">

        <div class="text-center">
            <a href="{{ path('app_admin') }}" class="btn btn-secondary">{{ 'user_edit.back_to_list' | trans }}</a>
        </div>
    </div>
{% endblock %}