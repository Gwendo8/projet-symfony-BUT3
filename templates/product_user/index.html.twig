
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .product-image {
            width: 40%;  /* L'image occupe 50% de la largeur de la carte */
            max-height: 200px;
            object-fit: cover;
            display: block;  /* Important pour centrer l'image */
            margin-left: auto;  /* Centrer l'image à gauche */
            margin-right: auto; /* Centrer l'image à droite */
        }

        .card {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
            text-align: center;  /* Centre le texte dans la carte */
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;  /* Centre les éléments horizontalement */
            text-align: center;  /* Centre le texte */
        }

        .product-info {
            margin-bottom: 10px; /* Réduit l'espace sous les infos produit */
        }

        .product-info h5 {
            font-size: 1.2rem;
            color: #007bff;
        }

        .product-info p {
            margin: 0.5rem 0;
        }

        .product-quantity {
            margin-bottom: 1px; /* Réduit l'espace sous la quantité */
            display: flex;
            flex-direction: column;
            align-items: center;  /* Centre la quantité et le bouton */
        }

        .product-quantity input {
            width: 80px;  /* Largeur du champ de quantité */
            text-align: center;  /* Centre la valeur numérique */
            margin-bottom: 10px;  /* Ajoute de l'espace entre l'input et le bouton */
        }

        .card-footer {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .card-footer .btn {
            padding: 1rem 2rem;  /* Augmente le padding pour un bouton plus grand */
            font-size: 1.2rem;  /* Augmente la taille de la police */
            margin-top: 5px;  /* Réduit l'espace entre le bouton et la quantité */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4"> 
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="row">
            {% for product in products %}
                {% if product.stock > 0 %}
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm border-light rounded h-100">
                            <img src="{{ asset(product.images[0].url) }}" alt="{{ product.name }}" class="card-img-top product-image">
                            <div class="card-body">
                                <div class="product-info">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p>{{ product.price }} €</p>
                                    <p><strong>{{ 'product.quantity_available'|trans }}:</strong> {{ product.stock }}</p>
                                </div>
                                <div class="product-quantity">
                                    <form action="{{ path('app_panier_ajouter') }}" method="POST">
                                        <input type="hidden" name="product_id" value="{{ product.id }}">
                                        <div class="d-flex flex-column align-items-center">
                                            <input type="number" name="quantity" value="1" min="1" max="{{ product.stock }}" class="form-control mb-2" style="width: 80px; text-align: center;">
                                            <button type="submit" class="btn btn-success">{{ 'product.add_to_cart'|trans }}</button> <!-- Bouton plus grand ici -->
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="col-12">
                    <p>{{ 'no_products_found'|trans }}</p>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_panier') }}" class="btn btn-primary btn-lg">{{ 'product.view_cart'|trans }}</a>
        </div>
    </div>
{% endblock %}