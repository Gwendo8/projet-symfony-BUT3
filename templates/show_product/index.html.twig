{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Admin Panel - Products</h1>
    {{ app.user.firstname }}
        <div class="mb-3">
            <a href="{{ path('app_product_add') }}" class="btn btn-primary">Ajouter un nouveau produit</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Status</th> 
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in pagination %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.status.toString() }}</td>

                        <td>
                            <a href="{{ path('app_product_edit', { id: product.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                            <form action="{{ path('app_product_delete', { id: product.id }) }}" method="post" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Pas de produits trouv√©s</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}