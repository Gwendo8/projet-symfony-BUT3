{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">{{ 'cart.title'|trans }}</h1>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} text-center">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% if panier is empty %}
            <div class="alert alert-info text-center">
                {{ 'cart.empty'|trans }}
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>{{ 'cart.product'|trans }}</th>
                            <th>{{ 'cart.price'|trans }}</th>
                            <th>{{ 'cart.quantity'|trans }}</th>
                            <th>{{ 'cart.total'|trans }}</th>
                            <th>{{ 'cart.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set total = 0 %}
                        {% for productId, details in panier %}
                            <tr>
                                <td><strong>{{ details.name }}</strong></td>
                                <td>{{ details.price }} €</td>
                                <td>
                                    <form action="{{ path('app_panier_modifier', {'productId': productId}) }}" method="POST" class="d-inline">
                                        <input type="number" name="quantity" value="{{ details.quantity }}" min="1" class="form-control form-control-sm d-inline-block" style="width: 70px;">
                                        <button type="submit" class="btn btn-warning btn-sm ml-2">{{ 'cart.update'|trans }}</button>
                                    </form>
                                </td>
                                <td>{{ details.price * details.quantity }} €</td>
                                <td>
                                    <form action="{{ path('app_panier_supprimer', {'productId': productId}) }}" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">{{ 'cart.delete'|trans }}</button>
                                    </form>
                                </td>
                            </tr>
                            {% set total = total + (details.price * details.quantity) %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <h3>{{ 'cart.total_price'|trans }} {{ total }} €</h3>
                <form action="{{ path('checkout') }}" method="POST">
                    <button type="submit" class="btn btn-success btn-lg">{{ 'cart.checkout'|trans }}</button>
                </form>
            </div>
        {% endif %}
    </div>
{% endblock %}